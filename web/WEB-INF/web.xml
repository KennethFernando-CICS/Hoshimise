<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>key</param-name>
        <param-value>KENNETHJACOBEDGE</param-value>
    </context-param>
    <context-param>
        <param-name>cipher</param-name>
        <param-value>AES/ECB/PKCS5Padding</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcClassName</param-name>
        <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
        <param-name>dbUserName</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcDriverURL</param-name>
        <param-value>jdbc:derby://localhost:1527/FapDB</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartLoaderServlet</servlet-name>
        <servlet-class>controller.CartLoaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReceiptServlet</servlet-name>
        <servlet-class>controller.ReceiptServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartTakeOutServlet</servlet-name>
        <servlet-class>controller.CartTakeOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>controller.PurchaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaptchaCheckerServlet</servlet-name>
        <servlet-class>controller.CaptchaCheckerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SimpleCaptchaServlet</servlet-name>
        <servlet-class>controller.SimpleCaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleCaptchaServlet</servlet-name>
        <url-pattern>/SimpleCaptchaServlet</url-pattern>
    </servlet-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>controller.HoshimiseListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ProductLoadServlet</servlet-name>
        <servlet-class>controller.ProductLoadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductLoadServlet</servlet-name>
        <url-pattern>/ProductLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartLoaderServlet</servlet-name>
        <url-pattern>/CartLoader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReceiptServlet</servlet-name>
        <url-pattern>/ReceiptServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartTakeOutServlet</servlet-name>
        <url-pattern>/CartTakeOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/Purchase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaCheckerServlet</servlet-name>
        <url-pattern>/CaptchaChecker</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>420</error-code>
        <location>/cart_error.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/content_error.html</location>
    </error-page>
    <error-page>
        <error-code>440</error-code>
        <location>/login_error.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/missing_page_error.html</location>
    </error-page>
</web-app>
